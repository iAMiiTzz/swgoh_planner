{
  "name": "swgoh-planner",
  "version": "1.0.0",
  "description": "SWGOH GAC Planner, Journey Tracker, Roster Planner, and Gear/Relic Planner",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "start": "node server/index.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "build:prod": "cd client && npm run build && npm run start",
    "deploy": "npm run build && NODE_ENV=production node server/index.js",
    "postinstall": "cd client && npm install",
    "render-build": "npm install && cd client && npm install && npm run build && cd .. && node verify-build.js",
    "create-admin": "node server/scripts/createAdmin.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop swgoh-planner",
    "pm2:restart": "pm2 restart swgoh-planner",
    "pm2:logs": "pm2 logs swgoh-planner"
  },
  "keywords": [
    "swgoh",
    "gac",
    "planner"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
